extends ../layout

block content
	.container
		.row
			each item in movies
				.col-md-2
					.thumbnail
						a(href='/movie/#{item._id}')
							img(src='#{item.poster}',alt='#{item.title}',style='display:block;width:100%')
						.caption
							h3 #{item.title}
							p:a.btn.btn-primary(href='/movie/#{item_id}',role='button') 观看预告