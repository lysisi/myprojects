extends ../layout

block content
	.container
		form.form-horizontal(method='post',action='/admin/admin',style='width:100%')
			input(type='hidden',name='movie[_id]',value='#{movies._id}')
			.form-group
				.row
					label.col-md-2.control-label(for='inputTitle') 电影名字
					.col-md-10
						input#inputTitle.form-control(type='text',name='movie[title]',value='#{movies.title}')
			.form-group
				.row
					label.col-md-2.control-label(for='inputDoctor') 电影导演
					.col-md-10
						input#inputDoctor.form-control(type='text',name='movie[doctor]',value='#{movies.doctor}')
			.form-group
				.row
					label.col-md-2.control-label(for='inputCountry') 国家
					.col-md-10
						input#inputCountry.form-control(type='text',name='movie[country]',value='#{movies.country}')
			.form-group
				.row
					label.col-md-2.control-label(for='inputLanguage') 语种
					.col-md-10
						input#inputLanguage.form-control(type='text',name='movie[language]',value='#{movies.language}')
			.form-group
				.row
					label.col-md-2.control-label(for='inputCountry') 国家
					.col-md-10
						input#inputCountry.form-control(type='text',name='movie[country]',value='#{movies.country}')
			.form-group
				.row
					label.col-md-2.control-label(for='inputYear') 上映年代
					.col-md-10
						input#inputYear.form-control(type='text',name='movie[year]',value='#{movies.year}')
			.form-group
				.row
					label.col-md-2.control-label(for='inputSummary') 电影简介
					.col-md-10
						input#inputSummary.form-control(type='text',name='movie[summary]',value='#{movies.summary}')
